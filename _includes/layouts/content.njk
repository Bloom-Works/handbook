<main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
<div class="row">
<div class="col-2 col-md-1">
</div>
<div class="col-10 col-md-11 p-3">
<div class="bg-dark p-3 text-center rounded">
<h1><a href="{{ '/' | url }}"  class="text-white">{{ metadata.title }}</a></h1>
</div>
<div class="p-1 text-center">
<h2 class="post-tag lead">{{metadata.description}}</h2>
</div>
<div class="p-3 p-md-5 mt-3 shadow rounded">
{{ content | safe }}
</div>
</div>
</div>
</main>
